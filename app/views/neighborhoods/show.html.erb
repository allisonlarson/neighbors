<div class="col-md-2">
  <div class="list-group" id='sidebar-padding'>
    <% @filters.each do |filter| %>
      <a href="#" class='btn list-group-item sidebar-button'><%= filter%></a>
    <% end %>
  </div>
</div>
<div></div>
<div></div>
<div class="col-md-8">
  <div id="map-canvas" style="height: 354px; width:713px;">
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>

    <script>
     var map;
     function initialize() {
       var mapOptions = {
         zoom: 16,
         center: new google.maps.LatLng(<%=@city.coordinates.first.lat%>, <%=@city.coordinates.first.lon%>)
       };
       map = new google.maps.Map(document.getElementById('map-canvas'),
           mapOptions);
     }

     google.maps.event.addDomListener(window, 'load', initialize);
     </script>
  </div>
</div>
